<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.marton.imageeditor.menu.BrushFragment">

    <Button
        android:id="@+id/buttonCircleBrush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickCircleBrushButton"
        android:text="Circle Brush" />

    <Button
        android:id="@+id/buttonSmartBrush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickSmartBrushButton"
        android:text="Smart Brush" />

    <Button
        android:id="@+id/buttonSelectAllBrush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickSelectAllButton"
        android:text="Select All" />
</LinearLayout>
